.side-bar
  .side-bar__header
    .side-bar__header-box
      .side-bar__header-box-name
        = current_user.name
      .side-bar__header-box-icon
        .side-bar__header-box-icon-new
          = link_to new_group_path(current_user) do
            = icon('fas', 'edit')
        .side-bar__header-box-icon-edit
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog')
  .side-bar__lists
    - current_user.groups.each do |group|
      .side-bar__lists__list
        = link_to group_messages_path(group) do
          .side-bar__lists__list__message{style: 'color: #ffffff;'}
            = group.name
          .side-bar__lists__list__message2{style: 'color: #ffffff;'}
            = group.show_last_message
